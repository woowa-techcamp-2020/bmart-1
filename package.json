{
  "name": "bmart-1",
  "version": "0.1.0",
  "dependencies": {
    "@prisma/client": "^2.4.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/react": "^16.9.45",
    "@types/react-dom": "^16.9.8",
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "dev": "npm run prisma:generate && npm-run-all --parallel dev:client dev:server",
    "build": "npm run build:client && npm run build:server",
    "dev:client": "cross-env PORT=4000 react-scripts start",
    "build:client": "react-scripts build",
    "test:client": "react-scripts test",
    "eject:client": "react-scripts eject",
    "dev:server": "env TS_NODE_PROJECT=src/server/tsconfig.json tsnd --no-notify --respawn --transpile-only -r tsconfig-paths/register src/server/main.ts",
    "build:server": "ttsc --project src/server/tsconfig.json",
    "prisma:introspect": "prisma introspect",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio --experimental"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@prisma/cli": "^2.4.1",
    "@types/express": "^4.17.7",
    "@types/node": "^12.12.54",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "cross-env": "^7.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.56",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.10"
  }
}
