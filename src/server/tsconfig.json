{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "build",
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
